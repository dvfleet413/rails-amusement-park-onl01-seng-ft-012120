<h1>Welcome <%= @user.name %></h1>

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
<% end %>

<% if @user.admin %>
    <h4>ADMIN</h4>
<% else%>   
    <h3>Height: <%= @user.height %></h3>
    <h3>Tickets: <%= @user.tickets %></h3>
    <h3>Nausea Level: <%= @user.nausea %></h3>
    <h3>Happiness Level: <%= @user.happiness %></h3>
    <h3>Mood: <%= @user.mood %></h3>
<% end %>

<%= link_to "See attractions", attractions_path%>

<%= link_to "Log Out", logout_path, method: :post%>